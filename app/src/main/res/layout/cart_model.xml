<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/individualCartModelCardView"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#EEEEEE"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/individualCartModelPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/individualCartModelCompanyName"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/individualCartModelImage"
                android:text="01303585751" />

            <ImageView
                android:id="@+id/individualCartModelImage"
                android:layout_width="90dp"
                android:layout_height="90dp"

                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/individualCartModelProductName"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:layout_toEndOf="@+id/individualCartModelImage"
                android:layout_toRightOf="@id/individualCartModelImage"
                android:foregroundGravity="center_horizontal"
                android:text="Sadikur Rahman"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/individualCartModelCompanyName"
                android:layout_width="190dp"
                android:textColor="@color/custom_color"
                android:layout_height="wrap_content"
                android:layout_below="@id/individualCartModelProductName"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/individualCartModelImage"
                android:layout_toRightOf="@id/individualCartModelImage"
                android:foregroundGravity="center_horizontal"
                android:text="Ali garage"
                android:textSize="16sp" />



            <ImageView
                android:id="@+id/individualCartModelRemove"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_baseline_delete_24" />

            <TextView
                android:id="@+id/individualCartModelPrice"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignBaseline="@+id/individualCartModelPhoneNumber"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:drawablePadding="2dp"
                android:foregroundGravity="center"
                android:text="9000 tk"
                android:textColor="@color/black"
                android:textSize="14sp" />




        </RelativeLayout>



    </androidx.cardview.widget.CardView>
</RelativeLayout>